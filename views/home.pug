extends layout 

block content 

    h1 Home!


    if user 
        p
            a(href='/message') New Message

        p #{user.username} is here

        if !user.admin_status
            p 
                a(href='/admin') Become Admin

        if user.admin_status 
            p You are admin. You can delete messages.
    
    else 
        p
            a(href='/login') Login

    
    div.message-container
        each message in messages 

            div.message-div
                if user 
                    p.message-author !{message.author.username}
                    p #{message.timeStamp}
        
                p.message-title !{message.title}
                p !{message.text}

                if user.admin_status 
                    button.toggle-show-delete Delete 

                    div.hidden-message-delete-form
                        p Are you sure you want to delete? This cannot be undone.
                        form(action="" method='DELETE') 
                            input(
                                type="hidden",
                                required='true',
                                value=message._id,
                                )
                            button(type='submit') Yeah, delete
                            