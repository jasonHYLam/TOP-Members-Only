extends layout 

block content 

    h1=title 

    p Admins can delete posts 

    if user
        p Enter password:

        form(action="" method='POST')
            div.form-group
                input.form-control(
                    type='text',
                    name='adminPassword',
                )
            button(type='submit') Submit
        
        if errors
            ul
            each error in errors 
                li #{error.msg}
    
    else 
        p You are not logged in