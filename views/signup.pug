extends layout 

block content 
    h1=title

    form(action="" method='POST') 
        div.form-group
            label(for="firstName") First Name
            input.form-control(type="text" name="firstName" placeholder='Jack' required=true)

        div.form-group
            label(for="lastName") Last Name
            input.form-control(type="text" name="lastName" placeholder='Jackson' required=true)

        div.form-group
            label(for="username") Username
            input.form-control(type="text" name="username" placeholder='Jack123' required=true)

        div.form-group
            label(for="password") Password
            input.form-control(type="password" name="password" required=true)

        div.form-group
            label(for="confirmPassword") Confirm Password
            input.form-control(type="password" name="confirmPassword" required=true)

        button(type='submit') Submit


